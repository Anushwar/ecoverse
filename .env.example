# EcoVerse Environment Template

# API Configuration
ENVIRONMENT=development
DEBUG=true

# Google Gemini API - Get your key from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Database Configuration
DATABASE_URL=sqlite:///./ecoverse.db

# Security - Change these in production!
SECRET_KEY=your-super-secret-key-for-production-change-this
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging
LOG_LEVEL=INFO

# Dataset Processing
ENABLE_DATASET_ANALYSIS=true
DATASET_UPDATE_INTERVAL_HOURS=24

# Application Defaults
DEFAULT_LOCATION=US
DEFAULT_CURRENCY=USD